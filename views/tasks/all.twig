{% extends 'layout.twig' %}

{% block body %}

	<div class="container" id="taskList" style="height:80vh;">
		<div class="d-flex justify-content-center pt-3">
			<h1 class="text-white shadow-md">Task list</h1>
		</div>
		{% if (tasks) %}
			<div class="d-flex flex-wrap align-items-start justify-content-start pt-3">
				{% for task in tasks  %}
					<div class="card mx-3 my-2 col-6 col-md-2 rounded" style="width: 18rem;">
						<div class="card-body">
							<h5 class="card-title">{{ task.title }}</h5>
							<h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>
							<p class="card-text">{{ task.description }}</p>
							<a href="/tasks/edit/{{ task.id }}" class="card-link text-purple">Edit</a>
							<a href="/tasks/delete/{{ task.id }}" class="card-link text-purple opacity-0.7">Delete</a>
						</div>
					</div>
				{% endfor %}
			</div>
		{% else %}
			<p class="p-3 font-weight-italic">There is no task yet..
				<a class="text-white" href="/tasks/add">create one now !</a>
			</p>
		{% endif %}
	</div>

{% endblock %}
